{
  "name": "@lodado/sdui-template-prosemirror",
  "version": "0.1.0",
  "description": "ProseMirror renderer for SDUI Template",
  "author": "lodado",
  "license": "MIT",
  "packageManager": "pnpm@9.0.6",
  "main": "./dist/cjs/client/index.cjs",
  "module": "./dist/es/client/index.mjs",
  "types": "./dist/types/index.d.ts",
  "source": "./src/index.tsx",
  "exports": {
    ".": {
      "import": "./src/index.tsx",
      "require": "./src/index.tsx",
      "types": "./src/index.tsx"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "import": {
          "default": "./dist/es/client/index.mjs",
          "types": "./dist/types/index.d.ts"
        },
        "require": {
          "default": "./dist/cjs/client/index.cjs",
          "types": "./dist/types/index.d.ts"
        }
      }
    },
    "main": "./dist/cjs/client/index.cjs",
    "module": "./dist/es/client/index.mjs",
    "source": "./src/index.tsx",
    "types": "./dist/types/index.d.ts"
  },
  "scripts": {
    "build": "rollup -c && tsc --emitDeclarationOnly --declarationMap false --declaration --declarationDir dist/types",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "lint": "eslint \"src/**/*.ts*\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "jest --passWithNoTests",
    "manual-release": "pnpm run build && pnpm publish --no-git-checks"
  },
  "sideEffects": false,
  "keywords": [
    "react",
    "sdui",
    "server-driven-ui",
    "prosemirror",
    "editor",
    "typescript"
  ],
  "peerDependencies": {
    "@lodado/sdui-template": "workspace:*",
    "react": "^18.0",
    "react-dom": "^18.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@lodado/sdui-template": "workspace:*",
    "prosemirror-commands": "^1.7.0",
    "prosemirror-history": "^1.4.1",
    "prosemirror-keymap": "^1.2.2",
    "prosemirror-model": "^1.25.3",
    "prosemirror-schema-basic": "^1.2.4",
    "prosemirror-state": "^1.4.3",
    "prosemirror-view": "^1.41.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.12.7",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "babel-jest": "29.5.0",
    "eslint": "^8.57.0",
    "eslint-config-sdui-template": "workspace:*",
    "jest-config": "workspace:*",
    "rollup-config": "workspace:*",
    "ts-jest": "29.0.5",
    "tsconfig": "workspace:*",
    "typescript": "^5.4.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lodado/sdui-template.git",
    "directory": "packages/sdui-template-prosemirror"
  },
  "homepage": "https://github.com/lodado/sdui-template#readme",
  "bugs": {
    "url": "https://github.com/lodado/sdui-template/issues"
  }
}
