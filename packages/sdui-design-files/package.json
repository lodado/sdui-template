{
  "name": "@lodado/sdui-design-files",
  "version": "1.0.1",
  "description": "Design system files for SDUI template - CSS variables, colors, and design tokens extracted from Figma",
  "sideEffects": [
    "./src/colors.css",
    "./src/index.css",
    "./src/layout.css"
  ],
  "license": "MIT",
  "author": "lodado",
  "main": "./index.ts",
  "module": "./index.ts",
  "source": "./index.ts",
  "types": "./index.ts",
  "bugs": {
    "url": "https://github.com/lodado/sdui-template/issues"
  },
  "homepage": "https://github.com/lodado/sdui-template",
  "keywords": [
    "design-system",
    "css-variables",
    "colors",
    "figma",
    "design-tokens",
    "sdui"
  ],
  "scripts": {
    "build": "rollup -c && tsc --emitDeclarationOnly --declarationMap false --declaration --declarationDir dist/types",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "lint": "eslint \"src/**/*.ts*\" \"*.ts*\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "jest --passWithNoTests",
    "generate:tokens": "ts-node scripts/extract-tokens.ts"
  },
  "packageManager": "pnpm@9.0.6",
  "devDependencies": {
    "@types/node": "^20.12.7",
    "babel-jest": "29.5.0",
    "eslint": "^8.57.0",
    "eslint-config-sdui-template": "workspace:*",
    "jest-config": "workspace:*",
    "rollup-config": "workspace:*",
    "ts-jest": "29.0.5",
    "tsconfig": "workspace:*"
  },
  "exports": {
    ".": {
      "import": "./index.ts",
      "require": "./index.ts",
      "types": "./index.ts"
    },
    "./tokens": {
      "import": "./src/generated/tokens.ts",
      "require": "./src/generated/tokens.ts",
      "types": "./src/generated/tokens.ts"
    },
    "./theme": {
      "import": "./src/generated/theme.css.ts",
      "require": "./src/generated/theme.css.ts",
      "types": "./src/generated/theme.css.ts"
    },
    "./index.css": "./src/index.css",
    "./colors.css": "./src/colors.css",
    "./layout.css": "./src/layout.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**",
    "src/**/*.css",
    "src/generated/**",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "import": {
          "default": "./dist/es/client/index.mjs",
          "types": "./dist/types/index.d.ts"
        },
        "require": {
          "default": "./dist/cjs/client/index.cjs",
          "types": "./dist/types/index.d.ts"
        }
      },
      "./tokens": {
        "import": {
          "default": "./dist/es/client/generated/tokens.mjs",
          "types": "./dist/types/generated/tokens.d.ts"
        },
        "require": {
          "default": "./dist/cjs/client/generated/tokens.cjs",
          "types": "./dist/types/generated/tokens.d.ts"
        }
      },
      "./theme": {
        "import": {
          "default": "./dist/es/client/generated/theme.css.mjs",
          "types": "./dist/types/generated/theme.css.d.ts"
        },
        "require": {
          "default": "./dist/cjs/client/generated/theme.css.cjs",
          "types": "./dist/types/generated/theme.css.d.ts"
        }
      },
      "./index.css": "./src/index.css",
      "./colors.css": "./src/colors.css",
      "./layout.css": "./src/layout.css"
    },
    "main": "./dist/cjs/client/index.cjs",
    "module": "./dist/es/client/index.mjs",
    "source": "./index.ts",
    "types": "./dist/types/index.d.ts"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.18.0"
  }
}
