{
  "name": "@lodado/sdui-template-monorepo",
  "version": "0.0.0",
  "description": "Monorepo for Server-Driven UI Template Library - A flexible and powerful template system for building server-driven user interfaces with dynamic layouts and components",
  "private": true,
  "packageManager": "pnpm@9.0.6",
  "keywords": [
    "server-driven-ui",
    "sdui",
    "react",
    "typescript",
    "layout",
    "dynamic-ui",
    "component-system",
    "state-management",
    "normalize",
    "subscription",
    "nextjs",
    "app-router",
    "dashboard-builder",
    "form-generator",
    "cms",
    "ab-testing",
    "ui-framework",
    "react-components",
    "zod",
    "type-safe"
  ],
  "author": {
    "name": "lodado",
    "url": "https://github.com/lodado"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lodado/sdui-template.git"
  },
  "homepage": "https://github.com/lodado/sdui-template#readme",
  "bugs": {
    "url": "https://github.com/lodado/sdui-template/issues"
  },
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "dev": "turbo run dev --parallel",
    "preview": "turbo run preview --concurrency=30",
    "storybook": "turbo run storybook --no-cache --continue --concurrency=15",
    "build": "turbo run build --concurrency=5",
    "build-storybook": "turbo run build && turbo run build-storybook --concurrency=5",
    "clean": "turbo run clean && rm -rf node_modules",
    "test": "turbo run test --concurrency=5",
    "test:e2e": "turbo run test:e2e --concurrency=5",
    "lint": "turbo run lint  -- --cache --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release": "turbo run build && changeset version && changeset publish --concurrency=5",
    "changeset": "changeset",
    "patch-notes": "changeset"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "eslint": "^8.57.0",
    "eslint-config-sdui-template": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^2.8.8",
    "sass": "^1.97.2",
    "turbo": "1.10.15"
  },
  "engines": {
    "node": ">=18.19.0",
    "pnpm": ">=9.0.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "pnpm lint"
  }
}
